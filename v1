async def redditpic(ctx, sub: str="sub", section: str=["new", "hot", "top"]):

#Time for actual code
    if section == "new":
#post to pick just makes it pick a random post from whatever section was specified by the client
        SR_submissions_new = reddit.subreddit(sub).new()
        post_to_pick = random.randint(0, 100)
        for i in range(0, post_to_pick):
            SR_submission_new = next(x for x in SR_submissions_new if not x.stickied)

#embed commands because it looks fancy
        embed = discord.Embed(title=SR_submission_new.title, color=0xff0000)
        embed.set_image(url=SR_submission_new.url)

#withoit the StopIteration, command just dies (for no real reason)
        try:
            await ctx.send(embed=embed)
        except StopIteration:
